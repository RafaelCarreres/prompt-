{
  "manifest_version": 3,
  "name": "Prompt+",
  "version": "1.0",
  "description": "Extract text from the active window, with options to summarize, explain, or assess sentiment, allowing you to easily paste it as a prompt for your LLM.",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Prompt+"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
